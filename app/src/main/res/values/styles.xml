<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="NoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditTextTheme1" parent="@style/Widget.AppCompat.EditText">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlActivated">#2196f3</item>
        <item name="colorControlHighlight">#2196f3</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:thumbTint">#c51162</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:listDivider">@color/white</item>
        <item name="android:divider">@color/white</item>
        <item name="actionBarDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/normalColor</item>
        <item name="android:statusBarColor">@color/normalColor</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorAccent">@color/normalColor</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:navigationBarColor">@color/customize_gray_color</item>
        <item name="navigationIconTint">@color/customize_gray_color2</item>

        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Spinner_Theme" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/mainColor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
    </style>

    <style name="date_picker_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorPrimary</item>    <!--days of the week-->
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#2888ac</item> <!-- Whatever color you want-->
    </style>


    <style name="CustomDialogTransparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Tooltip">
        <item name="android:textSize">16sp</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="cornerRadius">10dp</item>
        <item name="margin">20dp</item>
        <!--<item name="android:drawableTop">@drawable/ic_android_black_24dp</item>-->
        <item name="android:drawableStart">@drawable/ic_android_black_24dp</item>
        <!--<item name="android:drawableBottom">@drawable/ic_android_black_24dp</item>-->
        <!--<item name="android:drawableEnd">@drawable/ic_android_black_24dp</item>-->
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Tooltip2">
        <item name="android:layout_width">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/customize_gray_color2</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <string-array name="status_array">
        <item>All</item>
        <item>Pending</item>
        <item>Complete</item>
    </string-array>

    <string-array name="region_array">
        <item>Select Region</item>
    </string-array>

    <string-array name="province_array">
        <item>Select Province</item>
    </string-array>

    <string-array name="city_municipality_array">
        <item>Select City/Municipality</item>
    </string-array>

    <string-array name="district_office_array">
        <item>Select District</item>
    </string-array>

    <string-array name="barangay_array">
        <item>Select Barangay</item>
    </string-array>

    <style name="toolbar_text_size" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

</resources>