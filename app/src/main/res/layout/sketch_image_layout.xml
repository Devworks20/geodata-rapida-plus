<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_layout"
    android:layout_margin="10dp"
    android:layout_width="130dp"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="10dp"
    >
    <RelativeLayout
        android:id="@+id/rl_image"
        android:background="@drawable/pattern_square"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="90dp"
        >
        <ImageView
            android:id="@+id/iv_building_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            />
        <ImageView
            android:layout_marginEnd="2dp"
            android:id="@+id/iv_building_image_remove"
            android:layout_alignEnd="@id/iv_building_image"
            android:src="@drawable/asset_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:ignore="ContentDescription"
            android:background="@drawable/custom_white_and_black_background"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>