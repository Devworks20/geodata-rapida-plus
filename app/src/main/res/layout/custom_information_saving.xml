<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:id="@+id/registration_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_check_light_green_24dp"
            app:civ_border_color="@color/ProgressColor"
            app:civ_circle_background_color="@color/white"
            app:civ_border_width="2dp"
            />
        <TextView
            android:text="Success"
            android:textSize="34sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_display"
            android:text="Your changes have been successfully saved!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_marginBottom="10dp"
        android:text="OK"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/custom_background_square_blue"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        />

</LinearLayout>