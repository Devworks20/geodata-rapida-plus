<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="@drawable/building_background"
    >
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#2888ac"
                    android:theme="@style/AppTheme.WhiteAccent"
                    />
                <TextView
                    android:text="Loading..."
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/ll_login_layout"
            android:background="@drawable/custom_background_round_20"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/sri_icon"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    tools:ignore="ContentDescription,HardcodedText"
                    />

                <EditText
                    android:layout_marginTop="40dp"
                    android:id="@+id/edt_username"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:hint="Username"
                    android:autofillHints="Enter Email Address"
                    android:background="@drawable/custom_background_edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    tools:ignore="HardcodedText"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/edt_password"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:autofillHints="Enter Password"
                    android:background="@drawable/custom_background_edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    tools:ignore="HardcodedText"
                    android:imeOptions="actionDone"
                    />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/custom_blue_background"
                    android:text="LOGIN"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_marginTop="30dp"
                    android:text="@string/string_forgot_password"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <TextView
                    android:id="@+id/tv_what_is_rapida_mobile_app"
                    android:layout_marginTop="5dp"
                    android:text="@string/string_what_is_sri"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:layout_marginTop="30dp"
                    android:text="By Proceeding, you agree to our"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_terms"
                        android:text="@string/txt_terms"
                        android:textSize="16sp"
                        android:textColor="#0098FE"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="and"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:text="@string/txt_privacy_policy"
                        android:textSize="16sp"
                        android:textColor="#0098FE"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>