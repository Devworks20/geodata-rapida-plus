<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="@drawable/building_background"
    >
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#2888ac"
                    android:theme="@style/AppTheme.WhiteAccent"
                    />
                <TextView
                    android:text="Loading..."
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/ll_login_layout"
            android:background="@drawable/custom_background_round_20"
            android:paddingTop="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:paddingBottom="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/bms_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:ignore="ContentDescription,HardcodedText"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="BUILDING\nSURVEY 154"
                    android:textSize="19sp"
                    android:textColor="#D97027"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_application_name"
                android:layout_marginTop="20dp"
                android:text="FEMA-154 Seismic u Inspection"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                />

            <LinearLayout
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/edt_username"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:hint="Username"
                    android:textSize="16sp"
                    android:autofillHints="Enter Email Address"
                    android:background="@drawable/custom_background_edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    tools:ignore="HardcodedText"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/edt_password"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:textSize="16sp"
                    android:autofillHints="Enter Password"
                    android:background="@drawable/custom_background_edit_text_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    tools:ignore="HardcodedText"
                    android:imeOptions="actionDone"
                    />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_orange_custom"
                    android:text="LOGIN"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_forgot_password"
                    android:layout_marginTop="20dp"
                    android:text="@string/string_forgot_password"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView

                    android:text="Don't have an account?"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/sign_up"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_light"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>