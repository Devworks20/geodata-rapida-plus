<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:text="RVS No.: "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText"
                        />
                    <LinearLayout
                        android:paddingStart="0dp"
                        android:paddingEnd="20dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:weightSum="7"
                        >
                        <TextView
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:id="@+id/tv_RVSNo"
                            android:text="0554-2442"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            tools:ignore="HardcodedText,NestedWeights"
                            />

                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            >
                            <TextView
                                android:id="@+id/tv_view_pdf_report"
                                android:text="@string/string_view_pdf_report"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_color_customize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >
                    <TextView
                        android:gravity="end"
                        android:text="Building Name: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:id="@+id/tv_building_name"
                        android:text="ABC Building"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="7"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >
                    <TextView
                        android:gravity="end"
                        android:text="Seismicity Region: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:id="@+id/tv_seismicity_region"
                        android:text="0554-2444"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="7"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >
                    <TextView
                        android:gravity="end"
                        android:text="Screening Date: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:id="@+id/tv_screening_date"
                        android:text="08/11/2021"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="7"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >
                    <TextView
                        android:gravity="end"
                        android:text="Final Score: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:id="@+id/tv_final_score"
                        android:text="In-person Screening"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_weight="7"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>