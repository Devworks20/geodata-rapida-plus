<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/background_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MissionOrderFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent"
                >
                <LinearLayout
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:baselineAligned="false"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.3"
                        android:baselineAligned="false"
                        >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            >
                            <TextView
                                android:gravity="end"
                                android:text="Seismicity Region: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="4"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_seismicity_region"
                                android:text="High Seismicity"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="6"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            >
                            <TextView
                                android:gravity="end"
                                android:text="Inspection Date: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="4"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_screening_date"
                                android:text="08/02/2021"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="6"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            >
                            <TextView
                                android:gravity="end"
                                android:text="Inspection Type: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="4"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_ScreeningType"
                                android:text="0554-2444"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="6"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            >
                            <TextView
                                android:gravity="end"
                                android:text="Reason for \nInspection: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="4"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_ReasonForInspector"
                                android:text="Seismic Resiliency Survey"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="6"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            >
                            <TextView
                                android:gravity="end"
                                android:text="Remarks: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="4"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_Remarks"
                                android:text="Remarks"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                android:layout_weight="6"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.7"
                        >
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="Date Issued: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_DateIssued"
                                android:text="07/29/2021"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dateReported"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="Date Reported: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/tv_DateReported"
                                android:text="07/30/2021"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="Status: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:id="@+id/tv_statusPending"
                                android:background="@drawable/custom_red_background"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:layout_marginStart="5dp"
                                android:text="Pending"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/custom_background_square"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        tools:ignore="DisableBaselineAlignment"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            >
                            <ImageView
                                android:src="@drawable/sample_logo_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            >
                            <TextView
                                android:text="Republic of Philippines"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:visibility="gone"
                                android:text="DEPARTMENT OF REPUBLIC WORKS AND HIGHWAYS"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:text="CENTRAL OFFICE"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:text="Manila"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            >
                            <ImageView
                                android:src="@drawable/sample_logo_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight=".7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="MISSION ORDER NO.: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:id="@+id/tv_MissionOrderNo"
                                android:text=""
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:layout_marginEnd="5dp"
                            android:layout_weight=".3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="DATE ISSUED: "
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                            <TextView
                                android:id="@+id/tv_dateIssued"
                                android:text=""
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="HardcodedText"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="TO INSPECTORS: "
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_assign_inspector_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/tv_DateAndLocation"
                        android:layout_marginTop="30dp"
                        android:text="You are hereby directed to conduct an In-person Screening scheduled on ($Date$) at ($Location$). Hereunder are the listed Building Establishments: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />

                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainGray"
                        />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:text="Building Name"
                            android:layout_marginEnd="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Bldg Contact Person"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Address"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                    </LinearLayout>

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainGray"
                        />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_BuildingName"
                            android:layout_marginEnd="10dp"
                            android:text="ABC Building"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                        <TextView
                            android:id="@+id/tv_BuildingAdmin"
                            android:layout_marginTop="5dp"
                            android:text="Marlon S. Santos"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                        <TextView
                            android:id="@+id/tv_Address"
                            android:layout_marginTop="5dp"
                            android:text="Batasan Rd, QC"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            tools:ignore="HardcodedText"
                            />
                    </LinearLayout>

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainGray"
                        />

                    <TextView
                        android:layout_marginTop="30dp"
                        android:text="The SCREENING REPORT and NOTICES issued shall be published on or before the fifth (5th) day from the date above issued. For and By Authority of the Building Administrator."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:text="For and By Authority of the Bureau of Design."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />

                    <LinearLayout
                        android:id="@+id/ll_admin_signature"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent"
                        >
                        <ImageView
                            android:id="@+id/iv_admin_signature"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            tools:ignore="ContentDescription"
                            />
                    </LinearLayout>

                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_BuildingAdmin2"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Name of Admin"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                    <TextView
                        android:id="@+id/tv_BuildingAdmin2_Position"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Supervisor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_previous_reports_attachment"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="PREVIOUS REPORTS"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_no_previous_report"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="NONE"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent"
                        >
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:padding="5dp"
                            android:background="@color/mainGray"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            >
                            <ImageView
                                android:src="@drawable/word_png"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginStart="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="12sp"
                                    android:text="File Name 04062022.docx"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="HardcodedText"
                                    />
                                <TextView
                                    android:textSize="10sp"
                                    android:text="815KB"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="HardcodedText,SmallSp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_previous_reports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="beforeDescendants"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mission_order_attachment"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="OTHER ATTACHMENTS"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_no_mission_attachment"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="NONE"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent"
                        >
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_attachment_details"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:padding="5dp"
                            android:background="@color/mainGray"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent"
                            >
                            <ImageView
                                android:id="@+id/iv_image_attachment"
                                android:src="@drawable/pdf_icon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginStart="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:id="@+id/tv_filename_attachment"
                                    android:textSize="12sp"
                                    android:text="File Name 03182022.pdf"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="HardcodedText"
                                    />
                                <TextView
                                    android:id="@+id/tv_file_size_attachment"
                                    android:textSize="10sp"
                                    android:text="900KB"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="HardcodedText,SmallSp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_missionOrder_Attachments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="beforeDescendants"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>