<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >

    <shape>
        <solid
            android:color="#116ad9"
            />
        <stroke
            android:width="1dp"
            android:color="#116ad9"
            />
        <corners
            android:radius="10dp"
            />
    </shape>
</item>

<item>
    <shape>
        <!-- View background color -->
        <solid
            android:color="#1060C3" >
        </solid>

        <!-- View border color and width -->
        <stroke
            android:width="1dp"
            android:color="#1060C3" >
        </stroke>

        <!-- The radius makes the corners rounded -->
        <corners
            android:radius="10dp">
        </corners>

    </shape>
</item>

</selector>
