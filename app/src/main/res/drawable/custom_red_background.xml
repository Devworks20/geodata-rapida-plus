<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <!-- View background color -->
        <solid
            android:color="#ef4444" >
        </solid>

        <!-- View border color and width -->
        <stroke
            android:width="1dp"
            android:color="#ef4444" >
        </stroke>

        <!-- The radius makes the corners rounded -->
        <corners
            android:radius="5dp">
        </corners>

    </shape>
</item>

</selector>
